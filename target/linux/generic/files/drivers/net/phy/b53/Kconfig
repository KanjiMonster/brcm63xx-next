menuconfig B53
	tristate "Broadcom bcm53xx managed switch support"
	depends on SWCONFIG
	default	y if BCM47XX || BCM63XX
	help
	  Select Y to to enable support for Broadcom bcm53xx managed switch chips.

if B53

config B53_SPI_DRIVER
	bool "Enable support for SPI connected switches"
	default y if BCM63XX

config B53_PHY_DRIVER
	bool "Enable support for MDIO connected switches"
	default	y if BCM47XX || BCM63XX

config B53_BCM5325
	bool "Enable support for bcm5325(e/f/m) switch chips"
	default y

endif
